# Вікно з повідомленнями про вміст вимоги
<MesageWindowPopup>
    BoxLayout:
        id:popup_boxLayout
        orientation: 'vertical'

        Label:
            id:lbl_popup
            text_size: self.width, None
            size: self.texture_size


        Button:
            id: btn_popup
            size_hint_y: .1
            text:"ЗАКРИТИ ВІКНО"


# Вікно із занесенням ЗАМІТОК
<ZamitkuWindowPopup>
    BoxLayout:
        id:popup_boxLayout_zamitku
        orientation: 'vertical'

        TextInput:
            id:ti_popup_zamitku
            hint_text:'ВВЕДІТЬ ЗАМІТКУ'


        Button:
            id: btn_popup_zamitku
            size_hint_y: .1
            text:"ЗАКРИТИ ВІКНО"

